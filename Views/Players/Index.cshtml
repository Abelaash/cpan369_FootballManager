@model IEnumerable<FootballManager.Models.Player>

@{
    ViewBag.Title = "Players";
}

<h2>Players</h2>

<form method="get" action="@Url.Action("Index", "Players")" class="form-inline mb-3">
    <label for="leagueName">Filter by League:</label>
    @Html.DropDownList("leagueName", (SelectList)ViewBag.LeagueName, "All Leagues", new
    {
        @class = "form-control ml-2 mr-2",
        onchange = "this.form.submit();"
    })
</form>

<!-- Top action buttons -->
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    @Html.ActionLink("Import Players", "ImportMultipleTeamsFromApi", "Players", new { }, new { @class = "btn btn-primary ml-2" })
</p>

@if (!string.IsNullOrEmpty(Request.QueryString["leagueName"]))
{
    <h4>Showing players for: @Request.QueryString["leagueName"]</h4>
}


<table class="table table-hover table-bordered align-middle text-center shadow-sm bg-white rounded">
    <thead class="thead-dark bg-dark text-white">
        <tr>
            <th>First</th>
            <th>Last</th>
            <th>Position</th>
            <th>Nationality</th>
            <th>Age</th>
            <th>Height</th>
            <th>Weight</th>
            <th>Goals</th>
            <th>Shots</th>
            <th>Passes</th>
            <th>Team</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Position)</td>
                <td>@Html.DisplayFor(modelItem => item.Nationality)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td>@Html.DisplayFor(modelItem => item.Height)</td>
                <td>@Html.DisplayFor(modelItem => item.Weight)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalGoals)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalShots)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalPasses)</td>
                <td>
                    <div class="d-flex align-items-center justify-content-center">
                        @if (!string.IsNullOrEmpty(item.Team?.LogoUrl))
                        {
                            <img src="@item.Team.LogoUrl" alt="Logo" width="24" height="24" class="mr-2" style="object-fit: contain;" />
                        }
                        @Html.ActionLink(item.Team?.Name ?? "Unknown", "Details", "Teams", new { id = item.TeamId }, new { @class = "ml-1" })
                    </div>
                </td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        @Html.ActionLink("Edit", "Edit", new { id = item.PlayerId }, new { @class = "btn btn-outline-primary" })
                        @Html.ActionLink("Details", "Details", new { id = item.PlayerId }, new { @class = "btn btn-outline-secondary" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.PlayerId }, new { @class = "btn btn-outline-danger" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

